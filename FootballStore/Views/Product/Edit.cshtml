@model FootballStore.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(p => p.Id)

        <div class="form-group">
            @Html.LabelFor(p => p.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(p => p.Name)
                @Html.ValidationMessageFor(p => p.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(p => p.Price)
                @Html.ValidationMessageFor(p => p.Price)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.UrlImage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(p => p.UrlImage)
                @Html.ValidationMessageFor(p => p.UrlImage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Product page","Product")
</div>

